{{#if user}}
<div id="profile">
  <h2>Welcome, {{ user.username }}!</h2>
  <p>This is your profile page my friend! And your email is: {{ user.email }}</p>
      <div class="nav-button button-e" id="">
      <div id="circle"></div>
        <button id="edit-profile-button"><a href='/edit-profile'>Edit Profile</a></button>
      </div>

  {{#if user.favorites}}
  <h2>{{user.username}}'s Favorites</h2>
  <br />

<div id="favorites-list">
  {{#each cocktails}}
    <div class="cocktail-detail">
        <h2>{{this.strDrink}}</h2>
       <a href="/drinks/{{this.idDrink}}"><img src="{{this.strDrinkThumb}}" alt="" width="250"></a>
       <p>{{this.strDrink}} / {{ this.strAlcoholic }}</p>
       </div>
     {{/each}}
      {{else}}
        <h3>{{user.username}} does not have any favorites yet.</h3>
        </div>
     {{/if}}
     {{else}}
        <p>Still no logged in user, sorry!</p>
     {{/if}}
  </div>