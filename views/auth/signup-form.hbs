<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
    <label>Username
      <input type="text" name="username" placeholder="ironhacker2020" />
    </label>

    <label>Email
      <input type="email" name="email" placeholder="hello@ironhack.com" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

      <div class="nav-button button-e" id="">
      <div id="circle"></div>
        <button id="signup-form-button" type="submit">Create account</button>
      </div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>