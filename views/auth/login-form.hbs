<div id="login-form">

    <h2>Login</h2>
    <form action="/login" method="POST">
        <label>Email
            <input id="email-input" type="email" name="email" placeholder="hello@ironhack.com" />
        </label>

        <label>Password
            <input type="password" name="password" placeholder="********" />
        </label>

        <div class="nav-button button-e" id="">
        <div id="circle"></div>
            <button id= "login-form-button" type="submit">Login</button>
        </div>

        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}

    </form>
</div>